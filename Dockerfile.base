FROM registry.access.redhat.com/ubi8/openjdk-21:1.20

COPY CBOMkit-action.jar /cbombit-action/CBOMkit-action.jar
COPY src/main/resources/java/scan/*.jar /cbombit-action//java/scan/

ENV LANGUAGE='en_US:en'
ENV CBOMKIT_JAVA_JAR_DIR="/cbombit-action/java/scan"

CMD ["java","-Xmx16g","-jar","/cbomkit-action/CBOMkit-action.jar"]
